{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      {
        "include": "libs/registry/src/data/**/*",
        "outDir": "dist/libs/registry",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "registry": {
      "type": "library",
      "root": "libs/registry",
      "entryFile": "index",
      "sourceRoot": "libs/registry/src",
      "compilerOptions": {
        "tsConfigPath": "libs/registry/tsconfig.lib.json"
      }
    }
  }
}
