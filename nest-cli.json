{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      {
        "include": "libs/registry/src/data/**/*",
        "outDir": "dist/data",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "registry": {
      "type": "library",
      "root": "libs/registry",
      "entryFile": "index",
      "sourceRoot": "libs/registry/src",
      "compilerOptions": {
        "tsConfigPath": "libs/registry/tsconfig.lib.json"
      }
    },
    "app": {
      "type": "application",
      "root": "src",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    }
  }
}
